# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=localhost

# Database Configuration
DATABASE_URL="postgresql://postgres:23432559@localhost:5432/ecommerce_db?schema=public"

# JWT Configuration
JWT_SECRET=super_secret_jwt_key_for_access_tokens_at_least_32_characters_long
JWT_REFRESH_SECRET=super_secret_refresh_key_for_refresh_tokens_at_least_32_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4001

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PHONE_VERIFICATION=false